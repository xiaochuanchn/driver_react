extends layout/base


block link_block
    link(rel="stylesheet", href="stylesheets/client_manager.css")


block body_block 
    div.create_toast(id="create_toast")
        div.account_info_container()
            p.pointer(onclick="hidden_toast()") X
            h5(id="create_account_title") CREATE A NEW ACCOUNT
            .input_container
                input(type="text" id="user_name" placeholder="User name")
                input(type="text" id="password" placeholder="Password")
                        
            button(onclick="creat_account()") SUBMIT


block content_block
    .account_container
        div.create_container 
            .noting
                .line_shu
                p CLIENT ACCOUNT
            button(onclick="create_admin_account()") CREATE A NEW ACCOUNT
        .content_container(id="account_container")
            .line.title_line(id="line0")
                p NUMBER
                p ACCOUNT TYPE
                p USER NAME
                p PASSWORD
                p EDIT
                p DELETE


block script_block
    script(src="javascripts/layer/layer.js" type="text/javascript")
    script(src="javascripts/client_manager.js" type="text/javascript")