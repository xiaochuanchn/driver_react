extends layout/base


block link_block
    link(rel="stylesheet", href="stylesheets/automobile_manager.css")


block body_block 
    .add_new_container(id='add_new')
        .car_info_container
            p(onclick="dismiss_add_new_container()" style="cursor: pointer;margin-bottom:0;align-self: flex-start;margin-top: -30px;margin-left:-30px") X
            p(style="font-size:20px;color:#333;font-weight:bold" id='create_car_title') ADD NEW PLATE NUMBER
            .input_container
                input(type="text" placeholder='BRAND' id='brand')
                input(type="text" placeholder='TYPE' id='type')
                input(type="text" placeholder='PLATE NUMBER' id='plate_number')
            button(style='border-style: solid;border-width: 0px;height:54px;width:403px;background-color:#444;outline:none;color:white;border-radius:5px;margin-top:30px' onclick="submit_new_car_info()") SUBMIT

    .add_new_container(id='add_new_fuel_loction')
        .car_info_container
            p(onclick="dismiss_add_new_container()" style="cursor: pointer;margin-bottom:0;align-self: flex-start;margin-top: -30px;margin-left:-30px") X
            p(style="font-size:20px;color:#333;font-weight:bold" id="create_fuel_location_title") ADD NEW LOCATION
            .input_container
                input(type="text" placeholder='Location' id='location')
            button(style='border-style: solid;border-width: 0px;height:54px;width:403px;background-color:#444;outline:none;color:white;border-radius:5px;margin-top:30px' onclick="submit_new_location_info()") SUBMIT


block content_block
    .all_container
        .top_div
            .top_left_div
                .shu_line(style='height: 20px;width: 3px;background-color: #444;')
                p(style='cursor:pointer;color:#444;font-size:16px;font-weight:bold;margin-left:10px;margin-bottom:0;' id='mobile_title' onclick="mobile_act()") CAR MANAGEMENT
                .shu_line(style='height: 10px;width: 1px;background-color: #999;margin-left:30px')
                p(style='cursor:pointer;color:#ccc;font-size:16px;font-weight:bold;margin-left:30px;margin-bottom:0;' onclick='fuel_location_act()' id='fuel_title') FUEL LOCATION
            .top_right_div
                input(type="text" placeholder='Enter car number to check' style="height: 44px;width:249px;border-radius: 22px;outline: none;padding: 8px;padding-right: 40px;border-width:1px;border-color:#e6e6e6;border-style:solid;font-size:14px;" id="input_top")
                img(src="images/search.png", alt="", srcset="" style="width:24px;height:24px;margin-left: -35px;cursor: pointer" onclick="init_data()" id='search_image')
                select(style='font-size:14px;colro:#666;height:44px;width:120px;margin-left:40px;outline:none;border-radius:4px;background-color:#e4e4e4;border-style:solid;border-color:#e6e6e6' id="select_box")
                    option(value='1') Jan
                    option(value='2') Feb
                    option(value='3') Mar
                    option(value='4') Apr
                    option(value='5') May
                    option(value='6') Jun
                    option(value='7') Jul
                    option(value='8') Aug
                    option(value='9') Sep
                    option(value='10') Oct
                    option(value='11') Nov
                    option(value='12') Dec
                button(style='cursor:pointer;font-size:14px;color:#666;height:44px;width:120px;margin-left:20px;border-radius:4px;background-color:#E9E9E9;background-color:#e4e4e4;border-style:solid;boder;border-color:#e6e6e6' onclick="add_new_act()") ADD NEW

        .form_div(id="form")

block script_block
    script(src="javascripts/layer/layer.js" type="text/javascript")
    script(src="javascripts/xlsx-js/xlsx.core.min.js" type="text/javascript")
    script(src="javascripts/laydate/laydate.js" type="text/javascript")
    script(src="javascripts/automobile_manager.js" type="text/javascript")